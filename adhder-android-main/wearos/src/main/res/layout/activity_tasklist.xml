<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.adhderapp.wearos.adhder.ui.views.AdhderRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
    <com.adhderapp.wearos.adhder.ui.views.AddTaskButton
        android:id="@+id/add_task_button"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="center|bottom"
        app:layout_behavior="com.adhderapp.wearos.adhder.util.ScrollAwayBehavior"/>
    <com.adhderapp.wearos.adhder.ui.views.TimeText
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:titleTextColor="@color/text_primary"
        app:layout_behavior="com.adhderapp.wearos.adhder.util.TopScrollAwayBehavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
