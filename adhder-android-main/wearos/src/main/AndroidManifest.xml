<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:name="com.adhderapp.wearos.adhder.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />

        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.SplashActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.LoginActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />

        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.TaskListActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.TaskFormActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.TaskDetailActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.HabitDirectionActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.TaskResultActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.RYAActivity"
            android:taskAffinity="com.adhderapp.wearos.adhder.tasks"
            android:theme="@style/AdhderAppTheme" />

        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.AvatarActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.StatsActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.FaintActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />

        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.SettingsActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.ContinuePhoneActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.LevelupActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />

        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.ConfirmationActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
        <activity
            android:name="com.adhderapp.wearos.adhder.ui.activities.InputActivity"
            android:taskAffinity=""
            android:theme="@style/AdhderAppTheme" />
    </application>
</manifest>
